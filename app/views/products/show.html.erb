<h1><%= @product.name %></h1>

<%= render 'products/product_details', product: @product %>

<%= link_to 'All Products', products_path %>
<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to('Delete', product_path(@product.id), method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %>

<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p><%= review.created_at %></p>
  <p><%= link_to 'Edit', edit_product_review_path(@product.id, review.id)%></p>
<% end %>

<%= render 'new_review_form', product: @product, review: @review %>
